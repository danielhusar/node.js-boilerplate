{
	"js-files" : {
		"plugins" : ["/js/vendor/lodash.min.js", "/js/vendor/underscore.string.min.js"],
		"app"		  : ["/js/global.js", "/js/events.js", "/js/app.js" ]
	},
	"swig"	: {
		"development" : {
			"root" 		 		: "/app/views",
			"encoding" 		: "utf-8",
			"cache"		 		: false,
			"allowErrors" : true
		},
		"production"	: {
			"root" 		 		: "/app/views",
			"encoding" 		: "utf-8",
			"cache"		 		: true,
			"allowErrors" : false
		}
	},
	"less"	: {
		"development"  : {
			"src"					 : "/public",
			"force" 			 : true
		},
		"production"	 : {
			"src"					 : "/public",
			"compress" 		 : true, 
			"optimization" : 2
		}
	},
	"cookie" : {
		"secret" : "secret key"
	},
	"mongo-db"	:	{
		"development" : {},
		"production"  : {}
	}
}